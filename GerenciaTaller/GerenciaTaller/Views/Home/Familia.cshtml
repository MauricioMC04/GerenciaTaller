    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/Familia.js"></script>

</head>
<div>
    <body>
        <div class="container">
            <div>
                <input class="form-control" id="myInput" type="text" placeholder="Search..">
            </div>
            <br>
            <p>
                <button  class="btn btn-default" type="button" onclick="location.href='@Url.Action("FamiliasAgregar", "Home")';return false;">Agregar Familias</button>
            </p>
            <br>
            @foreach (GerenciaTaller.Models.Familia familia in Model.GetFamilias())
            {
                <div class="alert-info">
                    <div class="info">
                        <p><strong>Nombre: </strong>@familia.GetNombre()</p>
                        <p><strong>Descripcion: </strong>@familia.GetDescripcion()</p>
                    </div>
                    <div class="infoButtons">
                        <button class="btn btn-default" type="button" onclick="location.href='@Url.Action("FamiliaEliminar", "Home", new { nombre = familia.GetNombre() })';return false;">Eliminar</button>
                        <br /> <br />
                        <button type="button" class="btn btn-default" id=@("btn" + familia.GetNombre().Replace(" ", "")) onclick="MostrarEditForm('@familia.GetNombre().Replace(" ", "")')">Editar</button>
                    </div>
                </div>

                <div class="edit" id=@("editForm" + familia.GetNombre().Replace(" ", "")) align="center">
                    <hr />
                    <div class="editForm">
                        <form action="../Home/FamiliaEditar" method="POST" id=@("form" + familia.GetNombre().Replace(" ", ""))>
                            <div class="form-group">
                                <label for="txtNombre">Nombre</label>
                                <input class="form-control" id="txtNombre" name="txtNombre" type="text" value="@familia.GetNombre()" readonly>
                            </div>
                            <div class="form-group">
                                <label for="txtDescripcion">Descripcion</label>
                                <input class="form-control input-lg" id=@("txtDescripcion" + familia.GetNombre().Replace(" ", "")) name="txtDescripcion" type="text" value="@familia.GetDescripcion()">
                            </div>
                            <button type="button"  class="btn btn-default" onclick="Editar('@familia.GetNombre().Replace(" ", "")');return false;">Editar</button>
                        </form>
                    </div>
                </div>
                <br />
                <hr />
            }

            @*<a class="btn btn-primary" href="#" role="button">Agregar</a>*@
        </div>

